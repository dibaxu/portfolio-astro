---
import { Image } from "astro:assets";
import cotizadorImage from "../assets/projects/COTIZADOR.webp";
import mubiImage from "../assets/projects/MUBI.webp";
import untrefImage from "../assets/projects/UNTREF.webp";
import webkongImage from "../assets/projects/webKONG.webp";
import ReactIcon from "../icons/ReactIcon.astro";
import JavaScriptIcon from "../icons/JavaScriptIcon.astro";
import TailwindIcon from "../icons/TailwindIcon.astro";
import CSSIcon from "../icons/CSSIcon.astro";
import HTMLIcon from "../icons/HTMLIcon.astro";
import ReactRouterIcon from "../icons/ReactRouterIcon.astro";
import ZustandIcon from "../icons/ZustandIcon.astro";
import ViteIcon from "../icons/Vite.astro";

const TAGS = {
  REACT: {
    name: "React",
    class: "bg-black text-white",
    icon: ReactIcon,
  },
  JavaScript: {
    name: "JavaScript",
    class: "bg-javascript text-javascript",
    icon: JavaScriptIcon,
  },
  Tailwind: {
    name: "Tailwind",
    class: "bg-tailwind text-tailwind",
    icon: TailwindIcon,
  },
  CSS: {
    name: "CSS",
    class: "bg-css text-css",
    icon: CSSIcon,
  },
  HTML: {
    name: "HTML",
    class: "bg-html text-html",
    icon: HTMLIcon,
  },
  "React Router": {
    name: "React Router",
    class: "bg-react-router text-react-router",
    icon: ReactRouterIcon,
  },
  Zustand: {
    name: "Zustand",
    class: "bg-zustand text-zustand",
    icon: ZustandIcon,
  },
  Vite: {
    name: "Vite",
    class: "bg-vite text-vite",
    icon: ViteIcon,
  },
};

const PROJECTS = [
  {
    title: "webKong - Web Design Agency",
    description:
      "A web design agency website. Built with React, Zustand, Tailwind, Node, Express, and MongoDB.",
    image: webkongImage,
    link: "https://c15-20-ft-node-react.vercel.app/",
    github: "https://github.com/No-Country/c15-20-ft-node-react",
    tags: [
      TAGS.REACT,
      TAGS.Tailwind,
      TAGS.JavaScript,
      TAGS.Zustand,
      TAGS["React Router"],
    ],
  },
  {
    title: "MUBI Clone",
    description: "A MUBI clone built with JavaScript, Tailwind, CSS and HTML.",
    image: mubiImage,
    link: "https://dibaxu.github.io/PROYECTO_FINAL_JS/",
    github: "https://github.com/dibaxu/PROYECTO_FINAL_JS",
    tags: [TAGS.JavaScript, TAGS.Tailwind, TAGS.CSS, TAGS.HTML],
  },
  {
    title: "Insurance Quote",
    description:
      "A web app that calculates the price of an insurance quote based on the user's selections. Built with React, Tailwind, React Router, and CSS.",
    image: cotizadorImage,
    link: "https://cotizador-de-poliza-de-seguros.vercel.app/",
    github: "https://github.com/dibaxu/PROYECTO3-PedroA.-SotaTaier",
    tags: [
      TAGS.REACT,
      TAGS.Tailwind,
      TAGS.CSS,
      TAGS["React Router"],
      TAGS.Vite,
    ],
  },
  {
    title: "A school website",
    description: "A website for a school. Built with HTML and CSS.",
    image: untrefImage,
    link: "https://dibaxu.github.io/proyecto_final/",
    github: "https://github.com/dibaxu/proyecto_final",
    tags: [TAGS.HTML, TAGS.CSS],
  },
];
---

<div class='flex flex-wrap gap-4'>
  {
    PROJECTS.map(({ title, description, image, link, github, tags }) => (
      <article class='flex flex-col md:flex-row gap-4 p-6 '>
        <div class='basis-1/2 flex flex-col justify-center gap-2'>
          <a href={link} target='_blank' rel='noopener noreferrer'>
            <Image src={image} alt={title} class='rounded-md aspect-auto' />
          </a>
          <a href={github} class='text-sm hover:underline transition'>
            GitHub Repository <span>&rarr;</span>
          </a>
        </div>

        <div class='basis-1/2 flex flex-wrap flex-col'>
          <h3 class='text-2xl font-semibold'>{title}</h3>
          <p class=' text-pretty text-base mb-4 opacity-80'>{description}</p>
          <ul class='flex flex-wrap gap-4 text-sm mb-4'>
            {tags.map((tag) => (
              <li>
                <span class={`rounded-full flex gap-x-1 items-center`}>
                  <tag.icon class='size-6' />
                  {tag.name}
                </span>
              </li>
            ))}
          </ul>
        </div>
      </article>
    ))
  }
</div>
